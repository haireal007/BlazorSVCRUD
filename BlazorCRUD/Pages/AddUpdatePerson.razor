@page "/person/add"
@page "/person/edit/{userId:int}"

<PageTitle>@Title</PageTitle>

<h3>@Title</h3>
<a href="/persons" class="btn btn-outline-dark">Show All</a>
<div="row" class="col-md-6">
    <div>
        <EditForm Model="@person" OnValidSubmit="Save">
            <div class="form-group">
                <label for="Name">Name</label>
                <InputText class="form-control" @bind-Value="person.Name"></InputText> 
            </div>
            <div class="form-group">
                <label for="Age">Age</label>
                <InputNumber class="form-control" @bind-Value="person.Age">
                  
                </InputNumber>

            </div>

            <div class="form-group">
                <label for="Gender">Gender</label>
                <InputSelect class="form-control" @bind-Value="person.Gender">
                     <option> male</option>
                    <option> female</option>
                </InputSelect>

            </div>
            <div class="my-2">
                @message
            </div>
            <div class="my-2">
                <button type="submit" class="btn btn-outline-primary">Save</button>
            </div>
        </EditForm>
    </div>


</div>


@code {
    [Parameter]
    public int UserID{ get; set; }
    private string message = string.Empty;
    Model.Person person = new();
    private string Title = "Add Person";
    private void Save()
    {
       
    }
}
